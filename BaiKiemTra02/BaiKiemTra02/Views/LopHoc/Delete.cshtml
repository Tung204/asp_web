@using BaiKiemTra02.Models
@model LopHoc
<div class="container">
    <h3>Xóa lớp học</h3>
    <div asp-validation-summary="All" class="text-danger">   </div>
    <form method="post" asp-action="DeleteConfirm">
        <div class="form-group">
            <label asp-for="TenLopHoc">Tên lop hoc</label>
            <input asp-for="TenLopHoc" type="text" class="form-control" readonly/>
            <span asp-validation-for="TenLopHoc" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NamNhapHoc">Nam nhap hoc</label>
            <input asp-for="NamNhapHoc" type="date" class="form-control" readonly/>
            <span asp-validation-for="NamNhapHoc" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NamRaTruong">Nam ra truong</label>
            <input asp-for="NamRaTruong" type="date" class="form-control" readonly />
            <span asp-validation-for="NamRaTruong" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SoLuongSinhVien">Số lượng sinh viên</label>
            <input asp-for="SoLuongSinhVien" type="number" class="form-control" readonly/>
            <span asp-validation-for="SoLuongSinhVien" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Xoa</button>
        <a asp-action="Index" class="btn btn-secondary">
            Huy
        </a>
    </form>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
