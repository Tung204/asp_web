@model IEnumerable<HoaDon>

<div class="container my-4">
    <h2 class="text-primary">Danh sách Hóa Đơn</h2>
    <table class="table table-hover table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Tên khách hàng</th>
                <th>Số điện thoại</th>
                <th>Địa chỉ</th>
                <th>Trạng thái đơn hàng</th>
                <th>Mã giảm giá</th>
                <th>Tạm tính</th>
                <th>Tổng cộng</th>
                <th>Chi tiết</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.PhoneNumber</td>
                    <td>@($"{item.DetailedAddress}, {item.Ward}, {item.District}, {item.Province}")</td>
                    <td>@item.OrderStatus</td>
                    <td>@item.discountcode</td>
                    <td>@string.Format("{0:N0}đ", item.Total)</td>
                    <td>@string.Format("{0:N0}đ", item.Total - (item.discountcode ?? 0))</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">
                            Chi tiết đơn hàng
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
