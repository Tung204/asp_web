@{
    ViewData["Title"] = "Danh Sách Nhà Sản Xuất";
}

<div class="container">
    <h1 class="mt-4 mb-4">Danh Sách Nhà Sản Xuất</h1>

    <form asp-action="Search" method="get" class="mb-4">
        <input type="text" name="searchString" placeholder="Nhập nhà sản xuất cần tìm..." value="@ViewBag.SearchString" class="form-control" />
        <input type="submit" value="Tìm kiếm" class="btn btn-primary mt-2" />
    </form>

    <hr />
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Tên nhà sản xuất</th>
                <th>Ngày tạo</th>
                <th class="text-end">Chức năng</th> <!-- Thêm lớp text-end cho tiêu đề -->
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.nsx)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @String.Format("{0:dd/MM/yyyy}", item.DateEstablished)
                    </td>
                    <td class="text-end">
                        <!-- Thêm lớp text-end để căn chỉnh nút -->
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Sửa</a>
                        <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-info btn-sm">Chi tiết</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="Create" class="btn btn-primary">Thêm mới</a>
</div>
<br />
