	<div class="row">
		@if (isFilterByBoSuuTap)
		{
			<div class="row mb-3">
				<div class="col-12 text-center">
					<img src="@ViewBag.BoSuuTap.ImageUrl" class="bo-suu-tap-image" alt="Bộ sưu tập: @ViewBag.BoSuuTap.Name" style="width: 80%" />
				</div>
				<div class="col-12 text-center">
					<img src="@ViewBag.BoSuuTap.ImageUrl_2" class="bo-suu-tap-image" alt="Bộ sưu tập: @ViewBag.BoSuuTap.Name" style="width: 80%" />
				</div>
				<div class="col-12 text-center">
					<img src="@ViewBag.BoSuuTap.ImageUrl_3" class="bo-suu-tap-image" alt="Bộ sưu tập: @ViewBag.BoSuuTap.Name" style="width: 80%" />
				</div>
				<div class="col-12 text-center">
					<img src="@ViewBag.BoSuuTap.ImageUrl_4" class="bo-suu-tap-image" alt="Bộ sưu tập: @ViewBag.BoSuuTap.Name" style="width: 80%" />
				</div>
			</div>

			<div class="row d-flex justify-content-center flex-wrap">
			@foreach (var item in Model)
			{
					<div class="col-md-10 mb-3">
						<div class="card h-100" style="border-radius: 10px;">
							<div class="row no-gutters">
								<div class="col-md-3">
									<div class="thumbnail-images">
										<a asp-action="Details" asp-route-sanphamId="@item.Id">
											<img src="@item.ImageUrl_2" class="card-img-top" alt="@item.Name" />
										</a>
										<a asp-action="Details" asp-route-sanphamId="@item.Id">
											<img src="@item.ImageUrl_3" class="card-img-top" alt="@item.Name" />
										</a>
										<a asp-action="Details" asp-route-sanphamId="@item.Id">
											<img src="@item.ImageUrl_4" class="card-img-top" alt="@item.Name" />
										</a>
									</div>
								</div>
								<div class="col-md-5">
									<a asp-action="Details" asp-route-sanphamId="@item.Id">
										<img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" style="width: 100%; height: auto;" />
									</a>
								</div>
								<div class="col-md-4">
									<div class="card-body d-flex flex-column justify-content-between" style="margin-top:150px">
										<h2 class="card-title" style="color:#2c2461">@item.Name</h2>
										<p class="card-text">@item.Description<br>
											<b class="text-muted">@item.BoSuuTap.Name</b></p>
										<p class="card-text"><small class="text-muted">@item.price</small></p>
										<a asp-action="Details" asp-route-sanphamId="@item.Id" class="btn btn-light border border-5 border-primary rounded-pill text-primary">BUY NOW</a>
									</div>
								</div>
							</div>
					</div>
				</div>
			}
			</div>
		}
		@if (!isFilterByBoSuuTap)
		{
			@if(!isFilterSearch)
			{
				@foreach (var item in Model)
				{
					<div class="col-md-3 mb-3">
						<div class="card h-100" style="border-radius: 10px;">
							<a asp-action="Details" asp-route-sanphamId="@item.Id">
								<img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" />
							</a>
							<div class="card-body d-flex flex-column">
								<h5 class="card-title">@item.Name</h5>
								<h6 class="card-title">@item.Description</h6>
								<h7 class="card-title">@decimal.Parse(item.price).ToString("N0") VNĐ</h7>
								@* 	<p class="card-text">@item.Description</p> *@
								@* <div class="mt-auto">
					<div class="row">
					<div class="col-6">
					<a href="#" class="btn btn-primary w-100">Thêm vào</a>
					</div>
					<div class="col-6">
					<a href="#" class="btn btn-danger w-100">Mua hàng</a>
					</div>
					</div>
					</div> *@
							</div>
						</div>
					</div>
				}
			}
			else
			{
				@foreach (var item in ViewBag.SanPham)
				{
					<div class="col-md-3 mb-3">
						<div class="card h-100" style="border-radius: 10px;">
							<a asp-action="Details" asp-route-sanphamId="@item.Id">
								<img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" />
							</a>
							<div class="card-body d-flex flex-column">
								<h5 class="card-title">@item.Name</h5>
								<h6 class="card-title">@item.Description</h6>
								<h7 class="card-title">@decimal.Parse(item.price).ToString("N0") VNĐ</h7>
								@* 	<p class="card-text">@item.Description</p> *@
								@* <div class="mt-auto">
					<div class="row">
					<div class="col-6">
					<a href="#" class="btn btn-primary w-100">Thêm vào</a>
					</div>
					<div class="col-6">
					<a href="#" class="btn btn-danger w-100">Mua hàng</a>
					</div>
					</div>
					</div> *@
							</div>
						</div>
					</div>
				}
			}
		}
	</div>
</div>
