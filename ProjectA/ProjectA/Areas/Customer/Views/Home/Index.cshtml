@model IEnumerable<SanPham>
<style>
	.card {
		display: flex;
		flex-direction: column;
		height: 100%;
	}

	.card-body {
		flex-grow: 1;
	}

	.card-img-top {
		object-fit: contain;
		width: 100%;
		height: 200px; /* Hoặc kích thước mong muốn */
	}

	}
</style>
<div class="container">
	<!-- slider section -->
	@{
		bool isFilterApplied = ViewBag.IsFilterApplied ?? false;
		bool isFilterByBoSuuTap = ViewBag.IsFilterByBoSuuTap ?? false;
		bool isFilterSearch = ViewBag.IsFilterSearch ?? false;
	}
	@if (!isFilterApplied)
	{
		<section class="slider_section">
			<div class="slider_container">
				<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
					<ol class="carousel-indicators">
						<li data-target="#carouselExampleIndicators" data-slide-to="0" class="active">
							01
						</li>
						<li data-target="#carouselExampleIndicators" data-slide-to="1">
							02
						</li>
						<li data-target="#carouselExampleIndicators" data-slide-to="2">
							03
						</li>
					</ol>
					<div class="carousel-inner">
						<div class="carousel-item active">
							<div class="container-fluid">
								<div class="row">
									<div class="col-md-6 px-0">
										<div class="img-box">
											<img src="~/images/aokhoac.png" alt="" style="border-radius: 10px;" />
										</div>
									</div>
									<div class="col-md-6">
										<div class="detail-box">
											<h1>
												Áo
												<br />
												Khoác
											</h1>
											<p>
												Áo khoác có thiết kế mạnh mẽ, chất liệu bền, màu trung tính, và chi tiết kim loại tạo phong cách cá tính, hiện đại.
											</p>
											<a asp-controller="Home"
											   asp-action="FilterByTheLoai"
											   asp-route-id="3" class="text-warning">
												Mua Ngay
											</a>
										</div>
									</div>
								</div>
							</div>
						</div>
						<div class="carousel-item">
							<div class="container-fluid">
								<div class="row">
									<div class="col-md-6 px-0">
										<div class="img-box" >
											<img src="images/quanjean.png" alt="" style="border-radius: 10px;" />
										</div>
									</div>
									<div class="col-md-6">
										<div class="detail-box">
											<h1>
												Quần
												<br />
												Jean
											</h1>
											<p>
												Quần jean mang phong cách bụi bặm, chất liệu denim bền, tạo nên vẻ năng động, cá tính và dễ phối đồ
											</p>
											<a asp-controller="Home"
											   asp-action="FilterByTheLoai"
											   asp-route-id="6" class="text-warning">
												Mua Ngay
											</a>
										</div>
									</div>
								</div>
							</div>
						</div>
						<div class="carousel-item">
							<div class="container-fluid">
								<div class="row">
									<div class="col-md-6 px-0">
										<div class="img-box">
											<img src="images/giayd.png" alt="" style="border-radius: 10px;" />
										</div>
									</div>
									<div class="col-md-6">
										<div class="detail-box">
											<h1>
												Ưu đãi
												<br />
												Giày
											</h1>
											<p>
												Ưu đãi giày giảm đến 50%, mua 1 tặng 1 và miễn phí vận chuyển toàn quốc!
											</p>
											<a asp-controller="Home"
											   asp-action="FilterByTheLoai"
											   asp-route-id="8" class="text-warning">
												Mua Ngay
											</a>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
					<div class="carousel_btn-box">
						<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
							<span class="sr-only">Previous</span>
						</a>
						<img src="images/line.png" alt="" />
						<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
							<span class="sr-only">Next</span>
						</a>
					</div>
				</div>
			</div>
		</section>
		<br />
		<hr />
	}
